# WyngAI Production Environment Configuration

# Environment
NODE_ENV=production
ENVIRONMENT=production

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_BASE_URL=https://api.getwyng.co

# CORS Configuration
CORS_ORIGINS=https://www.getwyng.co,https://getwyng.co

# Database Configuration (PostgreSQL for production)
DATABASE_URL=postgresql://wyngai_user:${POSTGRES_PASSWORD}@localhost:5432/wyngai_prod
POSTGRES_DB=wyngai_prod
POSTGRES_USER=wyngai_user
POSTGRES_PASSWORD=${POSTGRES_PASSWORD:-demo_password}

# Redis Configuration (for caching and session management)
REDIS_URL=redis://localhost:6379/0

# RAG Configuration
RAG_INDEX_PATH=./rag/index
RAG_CHUNK_SIZE=512
RAG_OVERLAP_SIZE=64
MAX_SEARCH_RESULTS=20
DEFAULT_SEARCH_RESULTS=5
MIN_RELEVANCE_SCORE=0.1

# Security Configuration
SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/wyngai/application.log

# Monitoring
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true
SENTRY_DSN=

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/api.getwyng.co.crt
SSL_KEY_PATH=/etc/ssl/private/api.getwyng.co.key

# Data Sources Configuration
ECFR_API_BASE=https://www.ecfr.gov/api/v1
FEDREG_API_BASE=https://www.federalregister.gov/api/v1
CMS_API_BASE=https://www.cms.gov/api/v1

# Performance Tuning
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=65
MAX_REQUEST_SIZE=1048576  # 1MB

# Feature Flags
ENABLE_QUERY_LOGGING=true
ENABLE_ANALYTICS=true
ENABLE_CACHE=true
ENABLE_ML_FEATURES=false  # Set to true when ML dependencies are installed